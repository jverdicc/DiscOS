{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/discos/alphahir.schema.json",
  "title": "AlphaHIR",
  "type": "object",
  "required": [
    "version",
    "inputs",
    "nodes",
    "output_node",
    "declared_output_pds"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "inputs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "dtype",
          "pds"
        ],
        "properties": {
          "dtype": {
            "type": "string",
            "enum": [
              "f64"
            ]
          },
          "pds": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "kind"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "kind": {
            "type": "string",
            "enum": [
              "input",
              "const",
              "op"
            ]
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": "number"
          },
          "op": {
            "type": "string"
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    },
    "output_node": {
      "type": "string"
    },
    "declared_output_pds": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    }
  },
  "additionalProperties": false
}